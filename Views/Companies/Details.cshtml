@model Company

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Welcome - Linkedin</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Linkedin.styles.css" asp-append-version="true" />
</head>
<body>
    <h2>Company Details</h2>

    <div>
        <h4>Title: @Model.CompanyName</h4>
        <h4>Description: @Model.CompanyDescription</h4>
        <h4>Number of Employees: @Model.CompanyNoEmployees</h4>
    </div>

    <p>
        <a asp-action="Home">Back to List</a>
    </p>
</body>
</html>